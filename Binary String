#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t; cin>>t;
    while(t--)
    {
        int n,count=0; cin>>n;
        char str[n];
        for(int i=0;i<n;i++)
            cin>>str[i];
        for(int i=0;i<n;i++)
            if(str[i]=='1')
                count++;
        cout<<(count*(count-1))/2<<endl;    
    }
}
